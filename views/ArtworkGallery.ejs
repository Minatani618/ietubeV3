<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/ArtworkGallery.css" />
  </head>
  <body>
    <script src="/javascripts/script.js"></script>
    <h1><%= title %></h1>
    <p>page: <%= page %></p>
    <div>
      <a href="/ArtworkGallery/<%= parseInt(page)-1 %>">前へ</a>
      <a href="/ArtworkGallery/<%= parseInt(page)+1 %>">次へ</a>
    </div>
    <div>
      <a href="/ArtworkGallery/<%= parseInt(page)-10 %>">前へ -10</a>
      <a href="/ArtworkGallery/<%= parseInt(page)+10 %>">次へ +10</a>
    </div>
    <br />
    <% for (const artworkCard of artworkCards) { %>
    <div class="folderContainer border border-2">
      <div>
        <a href="<%= artworkCard.artworksHref %>" class="btn btn-outline-secondary"
          ><%= artworkCard.artworkName %> <span class="contentcount badge bg-secondary"><%= artworkCard.contentsCount %></span></a
        >
      </div>
      <div class="thumbnails">
        <% artworkCard.thumbnails.forEach((thumbnail)=>{ %>
        <img src="<%= thumbnail %>" alt="" />
        <% }) %>
      </div>
      <br />
    </div>
    <% } %>
    <div>
      <a href="/ArtworkGallery/<%= parseInt(page)-1 %>">前へ</a>
      <a href="/ArtworkGallery/<%= parseInt(page)+1 %>">次へ</a>
    </div>
    <div>
      <a href="/ArtworkGallery/<%= parseInt(page)-10 %>">前へ -10</a>
      <a href="/ArtworkGallery/<%= parseInt(page)+10 %>">次へ +10</a>
    </div>
    <div></div>
  </body>
</html>
